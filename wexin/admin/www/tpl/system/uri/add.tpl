<%inherit file="../system_base.tpl"/>

<%block name="content">
<div id="content"> <!-- Content begins here --> 
    <div class="box"> <!-- Box begins here -->
        <!--Standard form within a fieldset tag;-->
        <form method="post" action="/system/uri/add"><!-- Form -->
            <fieldset><legend>Uri</legend>

                <div class="input_field">
                    <label for="a">名称</label>
                    <input class="mediumfield" name="name" type="text" value="" />
                    <span class="field_desc"> * Required</span>
                </div>

                <div class="input_field">
                    <label for="b">地址</label>
                    <input class="bigfield" name="url" type="text" value="" />
                    <span class="field_desc"> 多个地址用半角逗号分割</span>
                </div>

                <input class="submit" type="submit" value="Submit" />
            </fieldset>
        </form><!-- /Form -->
    </div> <!-- END Box-->
</div> <!-- END Content -->
</%block>
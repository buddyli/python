html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, font, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td {
	margin: 0px;
	padding: 0px;
	border: 0px;
	outline: 0px;
	font-size: 100%;
	vertical-align: baseline;
	background: transparent;
}
body {
	line-height: 1;
}
ol, ul {
	list-style: none;
}
blockquote, q {
	quotes: none;
}
blockquote:before, blockquote:after,
q:before, q:after {
	content: '';
	content: none;
}

/* remember to define focus styles! */
:focus {
	outline: 0;
}

/* remember to highlight inserts somehow! */
ins {
	text-decoration: none;
}
del {
	text-decoration: line-through;
}

/* tables still need 'cellspacing="0"' in the markup */
table {
	border-collapse: collapse;
	border-spacing: 0;
}

a {

text-decoration: none;
color: #333333;

}

body {
	overflow: hidden;
	font-family:Arial, Helvetica, sans-serif;
	font-size: 12px;
}

#switcher {
	width:100%;
	background: url(../images/bg.jpg) repeat-x;
	height:60px;
	position:fixed;
}

#logo {
	margin: 0 80px 0 0;
}

#logo a{
	text-indent:-9999px;
	background: url(../images/sprite.png) no-repeat;
	background-position:0 -4px;
	width:200px;
	height:17px;
	margin:20px 0 0 0;
	display:block;
}

#logo a:hover{
	background-position:0 -23px;
}

#theme_select {
	background: url(../images/theme_dropdown.png) no-repeat;
	width: 224px;
	height: 22px;
	padding: 7px 0 0 10px;
	text-transform: capitalize;
	float: left;
	margin: 14px 0 0 0;
}

#colour_select {
	background: url(../images/colour_dropdown.png) no-repeat;
	width: 139px;
	height: 22px;
	padding: 7px 0 0 10px;
	text-transform: capitalize;
	float: left;
	margin: 14px 0 0 40px;
}

#colour_list { display: none; }

#colour_dropdown {
	width: 108px;
	margin-left: 46px;
}


.center {

	margin: auto;
	width: 960px;
	padding-top: 2px;

}

.center ul li {

	display: inline;
	float: left;
	position: relative;

}

.center ul li ul {

	background: url(../images/dropdown_bg.png) repeat-y;
	position:absolute;
	margin: 40px 0 0 5px;
	width:198px;
	padding:7px 10px 25px 10px;
	-webkit-box-shadow: 0px 1px 3px rgba(0, 0, 0, 1);
	-moz-box-shadow: 0px 1px 3px rgba(0, 0, 0, 1);
	-moz-border-radius-bottomleft:3px;
	-moz-border-radius-bottomright:3px;
	-webkit-border-bottom-left-radius:3px;
	-webkit-border-bottom-right-radius:3px;
	z-index:2;
	display:none;

}

.center ul li ul li a span{
	float: right;
	font-weight: bold;
	font-size: 10px;
	text-transform: uppercase;
	margin: -2px 0 0 0;
	color:#444444;
	text-shadow: 0px 1px 0px rgba(255, 255, 255, 0.7);
	padding: 0 5px;
	line-height: 16px;
	background: url(../images/span_normal.gif) repeat-x;

}

#theme_list a#theme_select span { display: none;}

.center ul li ul li a:hover span, .center ul li ul li a span.orange{
	color:#6e4514;
	text-shadow: 0px 1px 0px rgba(255, 255, 255, 0.3);
	background:url(../images/span_orange.gif) repeat-x;
}

.center ul li ul li a:hover{
	color:#fff;
	cursor:pointer;
}

.center ul li ul li { 
	display: block; 
	float: none;
}

.center ul li ul li a {

	display:block;
	color: #aaaaaa;
	padding: 10px 0;
	border-bottom: 1px solid #2d2d2d;
	text-shadow: 0px 1px 1px rgba(0, 0, 0, 1);
	text-transform: capitalize;

}

.center ul li ul li:first-child {

border-top-left-radius: 5px;
border-top-right-radius: 5px;
-moz-border-radius-topleft: 5px;
-moz-border-radius-topright: 5px;
-webkit-border-top-left-radius: 5px;
-webkit-border-top-right-radius: 5px;
padding-top: 3px;

}

.center ul li ul li:last-child {

border-bottom-left-radius: 5px;
border-bottom-right-radius: 5px;
-moz-border-radius-bottomleft: 5px;
-moz-border-radius-bottomright: 5px;
-webkit-border-bottom-left-radius: 5px;
-webkit-border-bottom-right-radius: 5px;

}

/* close -------------------------------------------------------------- */

.center li.remove_frame, .center li.purchase, .center li.download { 
	float: right; 
}

li.remove_frame{
	float: right;
	text-indent:-9999px;
	margin:20px 0 0 0;
}

li.remove_frame a{
	display:block;
	background:url(../images/sprite.png) no-repeat;
	background-position:0 -41px;
	width:15px;
	height:16px;
}

li.remove_frame a:hover{
	background-position:-17px -41px;
}

/* purchase / download -------------------------------------------------------------- */

li.purchase, li.download{
	float:right;
	text-indent:-9999px;
	margin:20px 42px 0 0;
}

li.download{
	margin:22px 42px 0 0;
}

li.purchase a{
	display:block;
	background:url(../images/sprite.png) no-repeat;
	background-position:0 -57px;
	width:116px;
	height:15px;
}

li.purchase a:hover{
	background-position:0 -77px;
}

li.download a{
	display:block;
	background:url(../images/sprite.png) no-repeat;
	background-position:0 -96px;
	width:130px;
	height:15px;
}

li.download a:hover{
	background-position:0 -115px;
}

#iframe {

margin-top: 60px;

